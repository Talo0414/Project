<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--设置日志为logImpl-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <typeAliases>
        <package name="com.ruoyu.pojo"/>
    </typeAliases>

    <mappers>
        <mapper class="com.ruoyu.mapper.UserMapper"/>
        <mapper class="com.ruoyu.mapper.InventoryMapper"/>
    </mappers>

</configuration>